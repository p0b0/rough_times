<script>


var comicData = <%- JSON.stringify(comicData) %>;
var title = document.getElementById('title');
var carousel = document.getElementById('comicCarousel');
var description = document.getElementById('comicDescription');



carousel.addEventListener('slid.bs.carousel', ()=>{
    var carouselOne = document.getElementById('carouselOne');
    var carouselTwo = document.getElementById('carouselTwo');
    var carouselThree = document.getElementById('carouselThree');

    if ( carouselOne.classList.contains('active')) {
        // title.innerText = 'comic one title';
        // description.innerText = 'comic one description - what is comic one about';
        toggleDataAccordingToCarousel(0);
    }
    else if ( carouselTwo.classList.contains('active') ) {
        // title.innerText = 'comic two title';
        // description.innerText = 'comic two description - what is comic two about';
        toggleDataAccordingToCarousel(1);
    }
    else if (carouselThree.classList.contains('active')) {
        // title.innerText = 'comic three title';
        // description.innerText = 'comic three description - what is comic three about';
        toggleDataAccordingToCarousel(2);
    }
})


function toggleDataAccordingToCarousel(currentElement) {
    title.innerText = comicData[currentElement].title;
    description.innerText = comicData[currentElement].description;
}

